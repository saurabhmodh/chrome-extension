{
  "manifest_version": 2,
  "name": "Getting started example",
  "description": "This extension shows a 'Hello World' message clicking on the icon.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }, 
  "content_scripts": [
    {
      "matches": ["http://*/*","https://*/*"],
      "js": ["myscript.js"]
    }
  ]
}